@import url(../main-bottom.css)
body,ul
	padding 0
	margin 0
ul li
	list-style none
.information_top
	width 100%
	height 40px
	line-height 40px
	background #fff	
	position relative
	border-bottom 1px solid #d6d7dc
	.mine
		text-align center
	.information_setting
		background url(../../img/information/nav_set_icon@2x.png) no-repeat 15px 10px
		background-size 20px
		top 0
		right 10px
		width 40px
		height 40px
		position absolute
.information_bottom
	background #fff
	width 100%
	margin-top 10px			
	.information_bottom_user
		padding-left 95px
		height 95px
		line-height 95px	
		position relative
		.information_touxiang
			background url(../../img/information/in_user-head@2x.png) no-repeat center
			background-size 65px
			position absolute
			left 10px
			top 10px
			width 75px
			height 75px
			border-radius 50%
		.information_touxiang1
			background url(../../img/information/1.png) no-repeat center
			background-size 100px
		.information_username			
			font-size 18px
		.information_youxiajiao
			position absolute
			background url(../../img/information/log-in_member_icon@2x.png) no-repeat center 
			background-size 30px
			height 30px
			width 30px
			left 56px
			top 57px
		.information_change
			position absolute
			width 70px
			height 50px
			line-height 50px
			left 30%
			top 50%
			font-size 14px
		&:after
			content ''
			position absolute
			background url(../../img/information/in_right_icon@2x.png)no-repeat
			background-size 16px 29px	
			width 20px
			height 36px
			top 30px
			right 15px
		&:before
			content ''
			position absolute
			height 1px
			bottom -1px
			left 0 
			width 100%
			background #F0F0F0
.information_info
	height 45px
	line-height 45px
	width 100%
	display flex	
	position relative		
	.information_cart
		text-align center
		flex 1
		.information_num 
			display inline-block
			font-size 24px
			margin-right 10px
	.information_scores
		text-align center
		flex 1
	&:after
		content ''
		position absolute
		width 1px
		top 8px
		left 50%
		bottom 8px
		background #F0F0F0
.demand
	margin-top 10px
	position relative
	height 50px
	line-height 50px
	padding-left 55px
	background url(../../img/information/content_list_icon01@2x.png) #fff no-repeat 20px
	background-size 28px 26px
	&:before
		position absolute
		content ''
		background url(../../img/information/content_list_right_icon@2x.png)no-repeat
		background-size cover
		width 12px
		height 24px
		top 15px
		right 10px
.demand1
	background url(../../img/information/content_list_icon02@2x.png) #fff no-repeat 20px
	background-size 28px 26px
.demand2
	background url(../../img/information/content_list_icon05@2x.png) #fff no-repeat 20px
	background-size 28px 26px
.demand3
	background url(../../img/information/content_list_icon03@2x.png) #fff no-repeat 20px
	background-size 28px 26px
