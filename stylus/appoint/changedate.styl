@import "orders.styl"
.head_deng
	background #fff
	height 40px
	line-height 40px
	text-align center
	.cha_cancel
		font-size 14px
		color #323232
		line-height 40px
		float left
		margin-left 10px
	.cha_confirm
		font-size 14px
		float right 
		color #EB5C18
		line-height 40px
		margin-right 10px
.change_time
	width 100%
	height 44px
	border-top 1px solid #E3E3E8
	background #FFF
	input
		color #BCBCBC
		font-size 14px
		width 40%
		height 40px
		float right
		margin-right 10px
		outline none
		border 0px
		font-family "微软雅黑"
#time
	display block
.wipe
	.wipe_sm
		.wipe_one
			width 100%
			height 43px
			text-align center
			line-height 43px
			color #EB5C18
			display inline-block
.bg
	display none
	position absolute
	top 0
	left 0 
	right 0
	bottom 0
	background rgba(0,0,0,0.2)		
.success_bg
	position absolute
	top 40%
	bottom 40%
	left 10%
	right 10%
	background #fff
	border-radius 10px
	.waitting
		font-size 14px
		text-align center
		width 100%
		height 60px 
		line-height 60px
		border-bottom 1px solid #d6d7dc
	.success_sure
		text-align center
		color #ea5404
		line-height 50px
		font-size 18px	
.clear_bg1
	display none
	position absolute
	top 0
	right 0
	left 0
	bottom 0
	background rgba(0,0,0,0.2)			
	.clear_bg_info
		left 5%
		right 5%
		
		